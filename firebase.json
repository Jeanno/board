{
  "hosting": [{
    "target": "web",
    "public": "client-web/build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "api",
      "*.md"
    ]
  }, {
    "target": "api",
    "public": "client-web/build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "api",
      "*.md"
    ],
    "rewrites": [
      {
        "source": "/*",
        "run": {
          "serviceId": "board-api",
          "region": "us-east1"
        }
      }
    ]
  }]
}
